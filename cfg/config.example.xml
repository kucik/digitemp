<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration>
  <db>
    <host>localhost</host>
    <username>dp</username>
    <password>heslo</password>
    <name>dp</name>
  </db>
  <hashkey>HashKeyForCookies</hashkey>
  <mqtt>
    <host>localhost</host>
    <username>mqtt_username</username>
    <password>mqtt_password</password>
    <topic>sensor/temperature/#</topic>
  </mqtt>
  <sensors>
    <sensor>
      <id>in</id>
      <name>Vnitrni</name>
      <device>/sys/bus/w1/devices/28-/w1_slave</device>
    </sensor>
    <sensor>
      <id>2</id>
      <name>Druhy</name>
      <device>/sys/bus/w1/devices/10-/w1_slave</device>
    </sensor>
    <sensor>
      <id>3</id>
      <name>Treti</name>
      <device>/sys/bus/w1/devices/28-/w1_slave</device>
    </sensor>
  </sensors>
  <RemoteSensors>
    <sensor>
      <id>liv1</id>
      <adress>289e0c65080000a9</adress>
      <name>obyvak</name>
    </sensor>
    <sensor>
      <id>liv2</id>
      <adress>28433e66080000a8</adress>
      <name>Foo</name>
    </sensor>
  </RemoteSensors>
  <HeatControll>
    <!-- Reference to sensor which controlls heating -->
    <ReferenceSensor>liv1</ReferenceSensor>
    <!-- List of intervals for using day temperature -->
    <Daytime>
      <interval>07:00-10:00</interval>
      <interval>17:00-23:05</interval>
    </Daytime>
    <!-- List of intervals to force start heating even for high temperature -->
    <ForceHeat>
      <interval>21:30-23:00</interval>
    </ForceHeat>
  </HeatControll>
</configuration>
